{
  "include": [
    "./src/**/*.vue",
    "./src/**/*.js"
  ],
  "compilerOptions": {
    "lib": [
      "ES2015"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}